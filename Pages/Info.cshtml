@page
@model DemoASPApp.Pages.InfoModel
@{
    ViewData["Title"] = "This my Page";
    Layout = "_Layout";
}

<form method="post">
    <div class="container">
        <h1>Register</h1>
        <p>Please fill in this form to create an account.</p>
        <hr>
        <label for="psw"><b>Name</b></label>
        <input type="text" placeholder="Enter Name" name="userName" id="userName" required>

        <label for="email"><b>Email</b></label>
        <input type="text" placeholder="Enter Email" name="email" id="email" required>

      
        <label for="psw-repeat"><b>Father Name</b></label>
        <input type="text" placeholder="Enter Father Name" name="fatherName" id="fatherName" required>
        <hr>
        <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>

        <button type="submit" class="registerbtn">Register</button>
    </div>

    <div class="container signin">
        <p>Already have an account? <a href="#">Sign in</a>.</p>
    </div>
</form>
