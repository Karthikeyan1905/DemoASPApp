@page
@model DemoASPApp.Pages.UserAddressModel
@using UserManagement.User;
@{
    Layout = "_MyLayout";
}

<h2>User Address Details</h2>

@if (Model.user != null && Model.user.addresses != null && Model.user.addresses.Count > 0)
{
    
        @foreach (Address address in Model.user.addresses)
        {
            <div class="company-card">
            <ul>
         
            <li>
                <strong>Address Type:</strong> @address.addressType<br />
            </li>
            <li> <strong>Door No:</strong> @address.permDoorNo<br /></li>
            <li>  <strong>Street:</strong> @address.street<br /></li>
            <li>  <strong>Town:</strong> @address.town<br /></li>
            <li>  <strong>District:</strong> @address.district<br /></li>
            <li>   <strong>State:</strong> @address.state<br /></li>
            <li>   <strong>Country:</strong> @address.country<br /></li>
            <li>
                <strong>Pincode:</strong> @address.pincode
            </li>
        
            </ul>
            </div>
        }
        <li class="nav-item" style="list-style:none">
            <a class="btn btn-primary" href="/UserData?id=@Model.user.userID">User Info</a>
            <a class="btn btn-primary" href="/ExperianceData?id=@Model.user.userID">Experiance</a>

        </li>
   
}
else
{
    <p>No address information available for this user.</p>
}
