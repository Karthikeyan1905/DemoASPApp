@page
@model DemoASPApp.Pages.IndexModel
@{
    Layout = "_LoginLayout";
}

<form class="modal-content animate"  method="post">
    <div class="imgcontainer">
       <img src="~/img/img_avatar2.png" alt="Avatar" class="avatar" width="125" height="125" />
    </div>

    <div class="container">
        <label for="uname"><b>Username</b></label>
        <input type="text" placeholder="Enter Username" name="uname" >

        <label for="psw"><b>Password</b></label>
        <input type="password" placeholder="Enter Password" name="psw" >
        <label style="color:red">@ViewData["EMsg"]</label>

        <button type="submit">Login</button>
        @* <label>
            <input type="checkbox" checked="checked" name="isEmployee"> Login as Employee 
        </label> *@ 
    </div>

    <div class="container" style="background-color:#f1f1f1">      
       <span class="psw">For User Registration <a href="/Registration">Click Here to Register</a></span> 
    </div>
</form>