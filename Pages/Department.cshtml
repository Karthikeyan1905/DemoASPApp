@page 
@model DemoASPApp.Pages.DepartmentModel
@{
    Layout = "_MyLayout";
}

<h1>Department</h1>

@if (Model.Employee == null)
{
    <p style="color:red;">Employee not found for the given user.</p>
}
else
{
    <p><strong>Department:</strong> @Model.Employee.Department.Name</p>
    <p><strong>Designation:</strong> @Model.Employee.Designation.Name</p>
}
